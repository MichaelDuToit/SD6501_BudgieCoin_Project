<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory app:title="@string/user">
        <EditTextPreference
            app:key="user-name"
            app:title="@string/username"
            />
        <EditTextPreference
            app:key="user-pin"
            android:title="@string/pin"
            android:inputType="number"
            />
    </PreferenceCategory>
    <PreferenceCategory app:title="@string/lbl_deleteUser">
        <Preference
            app:title="@string/lbl_deleteCurrentUser"
            android:key="user-id"
            android:summary="@string/msg_deleteUser"
            />

    </PreferenceCategory>

</PreferenceScreen>